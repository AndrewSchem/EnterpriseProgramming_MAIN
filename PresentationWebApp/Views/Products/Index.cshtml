@model IEnumerable<ShoppingCart.Application.ViewModels.ProductViewModel>


@{
    ViewData["Title"] = "Index";
}

<h1>Products Catalogue</h1>


<div class="container">
    <div class="row">

        @foreach(var p in Model)
        {
            <div class="col">
                <div class="card">
                    <img src="@p.ImageUrl" class="img-fluid" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@p.Name</h5>
                        <p class="card-text">$@p.Price</p>
                        <a href="/Products/Details?id=@p.Id" class="btn btn-primary">View Specification</a>

                        @if (User.IsInRole("Admin"))
						{
                            <br/><a href="/Products/Delete?id=@p.Id" class="btn btn-danger">Delete</a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>



